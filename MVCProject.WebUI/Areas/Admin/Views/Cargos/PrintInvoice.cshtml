@model MVCProject.Common.ViewModels.CargosVM


<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
    <meta http-equiv='Content-Type' content='text/html; charset=UTF-8' />

    <title>Editable Invoice</title>
    <script src="~/Theme/invocie/jquery-1.3.2.min.js"></script>
    <link href="~/Theme/invocie/printInvoice.css" rel="stylesheet" />
    <link href="~/Theme/invocie/styleInvoice.css" rel="stylesheet" />
    <script src="~/Theme/invocie/example.js"></script>
</head>

<body>

    <div id="page-wrap">

        <textarea id="header">INVOICE</textarea>

        <div id="identity">

            <textarea id="address">@Model.CustomerName

Phone : @Model.Telephone
</textarea>

            <div id="logo">

                <div id="logoctr">
                    <a href="javascript:;" id="change-logo" title="Change logo">Change Logo</a>
                    <a href="javascript:;" id="save-logo" title="Save changes">Save</a>
                    |
                    <a href="javascript:;" id="delete-logo" title="Delete logo">Delete Logo</a>
                    <a href="javascript:;" id="cancel-logo" title="Cancel changes">Cancel</a>
                </div>

                <div id="logohelp">
                    <input id="imageloc" type="text" size="50" value="" /><br />
                    (max width: 540px, max height: 100px)
                </div>
                <img id="image" src="~/Theme/invocie/logo.png" alt="logo" />
            </div>

        </div>

        <div style="clear:both"></div>

        <div id="customer">

            <textarea id="customer-title">ZuuCargo
War Mohammad </textarea>

            <table id="meta">
                <tr>
                    <td class="meta-head">Invoice #</td>
                    <td><textarea>@Model.Id</textarea></td>
                </tr>
                <tr>

                    <td class="meta-head">Date</td>
                    <td><textarea id="date">@Model.Date</textarea></td>
                </tr>
                @*<tr>
                    <td class="meta-head">Amount Due</td>
                    <td><div class="due">$875.00</div></td>
                </tr>*@

            </table>

        </div>

        <table id="items">

            <tr>


                <th>Quantity</th>
                <th>Product Name</th>
                <th></th>
                <th></th>

                <th>Price Dollar</th>
            </tr>

            <tr class="item-row">

                <td class="item-name"><div class="delete-wpr" style="text-align: center; "><textarea style="text-align: center;font-size:large; ">@Model.Quantity</textarea><a class="delete" href="javascript:;" title="Remove row">X</a></div></td>
                <td class="description"><textarea style="text-align: center;font-size:large; "> @Model.CustomerName</textarea></td>
                <td><textarea class="cost"></textarea></td>
                <td><textarea class="cost"></textarea></td>


                <td><textarea class="cost" style="text-align: center; font-size:large;">@Model.TotalDollar</textarea></td>

            </tr>




            <tr id="hiderow">
                <td colspan="5"><a id="addrow" href="javascript:;" title="Add a row">Add a row</a></td>
            </tr>

            <tr>
                <td colspan="2" class="blank"> </td>
                <td colspan="2" class="total-line">Total ($) </td>
                <td class="total-value"><div id="subtotal" style="text-align: center;font-size:large; ">@Model.TotalDollar</div></td>
            </tr>
            @if (Model.Tax > 0)
            {
        <tr>

            <td colspan="2" class="blank"> </td>
            <td colspan="2" class="total-line">Tax</td>
            <td class="total-value"><div id="total" style="text-align: center;font-size:large; ">@Model.Tax</div></td>
        </tr>
}
            @if (Model.TotalCargo > 0)
            {
        <tr>

            <td colspan="2" class="blank"> </td>
            <td colspan="2" class="total-line">Total Cargo</td>
            <td class="total-value"><div id="total" style="text-align: center;font-size:large; ">@Model.TotalCargo</div></td>
        </tr>
}
            <tr>
                <td colspan="2" class="blank" style="color:red;font-size:large;"> @Model.Notes</td>




            </tr>

            <tr>
                <td colspan="2" class="blank"> </td>
                <td colspan="2" class="total-line balance">TOTAL  </td>
                <td class="total-value balance"><div class="due" style="text-align: center;font-size:large; ">@Html.Raw(Model.TotalDollar + Model.Tax)</div></td>
            </tr>
            @*<tr>
            <td colspan="2" class="blank"> </td>
            <td colspan="2" class="total-line balance">Exchange </td>
            <td class="total-value balance"><div class="due">@Model.AccountInfo.Exchange</div></td>
        </tr>*@
        </table>

        <div id="terms">
            <h5></h5>
           
        </div>

    </div>

</body>

</html>

@{
    ViewBag.Title = "Arrived Exchange  ";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@model IEnumerable<MVCProject.Common.ViewModels.ArrivedExchangeVM>


<script src="~/Theme/js/jquery-3.5.1.min.js"></script>
<link rel="stylesheet" type="text/css" href="~/Theme/js/datatables.min.css">
<script src="~/Theme/js/jquery.printPage.js" type="text/javascript"></script>

<script type="text/javascript" charset="utf8" src="~/Theme/js/datatables.min.js"></script>
<script type="text/javascript" charset="utf8" src="~/Theme/js/buttons.colVis.min.js"></script>

<script>



    document.getElementById('test').addEventListener('click', test);

    function AskYesNo() {

        if (confirm('Are you sure you want to DELETE THIS TABLE ?')) {
            window.open('http://www.ZuuCargo.com/Admin/Admin/BackupAndTruncateArrivedExchange', '_blank');

            setTimeout(function () {

                // Something you want delayed.

            }, 1000); // How long you want the delay to be, measured in milliseconds.
            location.reload();


        } else {
            return false;
        }



    }


</script>

<div style="overflow: scroll;">
    <p>

        <a class="btn btn-app" href="http://www.ZuuCargo.com/Admin/ArrivedExchange/Create">

            <i class="fa fa-plus"></i> Create New
        </a>


        <a class="btn btn-app" id="test" onclick="AskYesNo()">

            <i class="fa fa-trash-alt"></i> Drop Table
        </a>



    </p>
    <table class="table" id="table_id">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Price)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DateAdded)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Notes)
                </th>

                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DateAdded)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Notes)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |

                    @Html.ActionLink("Delete", "Delete", new { id = item.Id }) |
                    @Html.ActionLink("PrintInvoice", "PrintInvoice", new { id = item.Id }) |

                </td>
            </tr>
            }
        </tbody>
    </table>
</div>

@*<script src="~/Theme/js/jquery-1.4.4.min.js" type="text/javascript"></script>*@

<script>
    $(document).ready(function () {
        $(".btnPrint").printPage();
    });
</script>
<script type="text/javascript">
    $(document).ready(function () {
        $('#table_id').DataTable(
            {
                dom: 'Bfrtip',
                buttons: [
                    'copy', 'excel', 'pdf', 'colvis'

                ],
                autoFill: true,
                colReorder: true,
                fixedColumns: true,
                responsive: false,
                keys: true,
                rowReorder: true,
                select: true
            });
        new $.fn.dataTable.Buttons(table_id, {
            buttons: [
                'copy', 'excel', 'pdf'

            ]
        });


    })</script>
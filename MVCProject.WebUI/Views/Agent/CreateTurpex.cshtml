@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="container-fluid">

        <form>
            <div class="card shadow mb-3">
                <div class="card-header py-3">
                    @if (ViewBag.FaultDesc != null || ViewBag.FaultDesc != "")
                    {
                        <p class="text-primary m-0 fw-bold" style="color:red">@ViewBag.FaultDesc</p>
                    }
                    <p class="text-primary m-0 fw-bold">Fill in the required fields * (Zorunlu alanlar)</p>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-sm-12 col-md-8 col-lg-8">
                            <div class="mb-3"><label class="form-label" for="service_name"><strong>Sender Name*</strong></label><input readonly class="form-control" value="HAŞİMİ GROUP GIDA LOJİSTİK KARGO HİZM İNŞ İTH İHR LTD ŞTİ" type="text" data-bs-toggle="tooltip" data-bss-tooltip="" id="service_name" name="SenderName" required="" maxlength="100"></div>
                        </div>
                        <div class="col-sm-12 col-md-4 col-lg-4">
                            <div class="mb-3">
                                <label class="form-label" for="service_price"><strong>Shipment Type *</strong><br></label>
                                <select class="form-control" data-bs-toggle="tooltip" data-bss-tooltip="" name="PostType" required="" title="Gönderi Tipini Seçiniz">
                                    <option value="KOLİ" selected="">KOLİ</option>
                                    <option value="K.PAKET">K.PAKET</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-8 col-lg-8">
                            <div class="mb-3"><label class="form-label" for="service_name"><strong>Sender Phone Number *</strong></label><input readonly value="05444077373" class="form-control" type="text" id="service_name-1" name="SenderTelephone" required="" maxlength="11" minlength="11"></div>
                        </div>
                        <div class="col-sm-12 col-md-4 col-lg-4">
                            <div class="mb-3"><label class="form-label" for="service_price"><strong>Sender Mail Address *</strong><br></label><input class="form-control" type="text" id="service_name-2" name="SenderEmail" maxlength="100"></div>
                        </div>
                        <div class="col-sm-12 col-md-8 col-lg-8">
                            <div class="mb-3"><label class="form-label" for="service_name"><strong>Sender Address&nbsp;</strong></label><input readonly class="form-control" value="CUMHURİYET MAH. 1199A SOKAK NO:10U SİLOPİ ŞIRNAK" type="text" data-bs-toggle="tooltip" data-bss-tooltip="" id="service_name-3" name="SenderAddress" maxlength="250"></div>
                        </div>
                        <div class="col-sm-12 col-md-4 col-lg-4">
                            <div class="mb-3"><label class="form-label" for="service_price"><strong>Sender Post Code *</strong><br></label><input readonly class="form-control" type="text" value="73400" id="SenderPostalCode" name="SenderPostalCode" maxlength="6" inputmode="numeric"></div>
                        </div>


                        <div class="col-sm-12 col-md-8 col-lg-8">
                            <div class="mb-3"><label class="form-label" for="service_name"><strong>Receiver Name * (Alıcı Adı)</strong></label><input class="form-control" type="text" data-bs-toggle="tooltip" data-bss-tooltip="" id="service_name-7" name="ReceiverName" required="" maxlength="100"></div>
                        </div>
                        <div class="col-sm-12 col-md-4 col-lg-4">
                            <div class="mb-3">
                                <label class="form-label" for="service_price"><strong>Receiver Country *</strong><br></label>
                                <select class="form-control" id="ReceiverCountryId" name="ReceiverCountryId" required="">
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-8 col-lg-8">
                            <div class="mb-3"><label class="form-label" for="service_name"><strong>Acente  (Kişi)</strong></label><input class="form-control" type="text" data-bs-toggle="tooltip" data-bss-tooltip="" id="service_name-7" name="Acente" maxlength="100"></div>
                        </div>
                        <div class="col-sm-12 col-md-4 col-lg-4">
                            <div class="mb-3">
                                <label class="form-label" for="service_price"><strong>Receiver City *</strong><br></label>
                                <select class="form-control" id="ReceiverCityId" name="ReceiverCityId" required="">
                                </select>
                            </div>
                        </div>
                        <div class="col-sm-12 col-md-8 col-lg-8">
                            <div class="mb-3"><label class="form-label" for="service_name"><strong>Receiver Phone Number * (Alıcı Telefon)</strong></label><input class="form-control" type="text" id="service_name-8" name="ReceiverTelephoneNo" required=""></div>
                        </div>
                        <div class="col-sm-12 col-md-4 col-lg-4">
                            <div class="mb-3"><label class="form-label" for="service_price"><strong>Receiver Mail Address (Alıcı Mail)</strong><br></label><input class="form-control" type="text" id="service_name-9" name="ReceiverEmail" maxlength="100"></div>
                        </div>
                        <div class="col-sm-12 col-md-8 col-lg-8">
                            <div class="mb-3"><label class="form-label" for="service_name"><strong>Receiver Address * (Alıcı Adresi) &nbsp;</strong></label><input class="form-control" type="text" data-bs-toggle="tooltip" data-bss-tooltip="" id="service_name-10" name="ReceiverAddress" maxlength="255" title="Sisteme kayıtlı firma bilgisi dışında bir firma gönderici Adresi gönderilmek istendiğinde set edilmelidir." required=""></div>

                        <div class="col-sm-12 col-md-8 col-lg-3">
                            <div class="mb-3"><label class="form-label" for="service_name"><strong>Weight (Ağırlık) *</strong></label><input required="" class="form-control" type="number" data-bs-toggle="tooltip" data-bss-tooltip="" id="service_name-14" name="Weight" maxlength="10" title="Gönderinin ağırlığıdır. Gram cinsinden gönderilmelidir." inputmode="numeric"></div>
                        </div>
                        <div class="col-sm-12 col-md-8 col-lg-3">
                            <div class="mb-3"><label class="form-label" for="service_name"><strong>Content (İçerik )</strong></label><input class="form-control" type="text" data-bs-toggle="tooltip" data-bss-tooltip="" id="service_name-14" name="Content"></div>
                        </div>
                        <div class="col-sm-12 col-md-8 col-lg-3">
                            <div class="mb-3"><label class="form-label" for="service_name"><strong>Value * (Gönderi Değeri (USD) )</strong></label><input class="form-control" data-bs-toggle="tooltip" data-bss-tooltip="" id="service_name-14" name="ValueOfPackage" required="" min="1" type="number"></div>
                        </div>
                       
                        <div class="col-sm-12 col-md-4 col-lg-4">
                            <div class="mb-3">
                                <label class="form-label" for="service_price"><strong>Harmony Code (İçerik Kodu) *</strong><br></label>
                                <select class="form-control" id="HarmonyCode" name="HarmonyCode" required="">
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="text-end mb-3"><button class="btn btn-primary btn-lg" type="submit" style="padding: 8px 16px;margin: 11px;">Save</button><a class="btn btn-danger btn-lg" role="button" href="/Admin/Shipment">Cancel</a></div>
        </form>
    </div>


}

<script type="text/javascript">

    let dropdownUlke = $('#ReceiverCountryId');

    dropdownUlke.empty();

    dropdownUlke.append('<option selected="true" disabled>Choose Country</option>');
    dropdownUlke.prop('selectedIndex', 0);

    // Populate dropdown with list of provinces
    var data = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(ViewBag.Ulkeler));
    data = JSON.parse(data);

        $.each(data, function (key, entry) {
            dropdownUlke.append($('<option></option>').attr('value', entry.ulke_id).text(entry.ulke_ad));
        })
    $('#ReceiverCountryId').change(function () {
        var selectedCountry = $('select[id=ReceiverCountryId] option').filter(':selected').val();
        $.ajax(
            {
                type: "GET",
                url: "/Agent/UlkedenSehirGetir/?ulkeId=" + selectedCountry,
                contentType: 'application/json',


                success: function (result) {
                    let dropdownSehir = $('#ReceiverCityId');
                    var result1 = JSON.parse(result);
                    dropdownSehir.empty();
                    $.each(result1, function (key, entry) {
                        dropdownSehir.append($('<option></option>').attr('value', entry.sehir_id).text(entry.sehir_ad));
                    })



        },
            });
    });
    $.ajax(
        {
            type: "GET",
            url: "/Agent/HarmonyCodeGetir/",
            contentType: 'application/json',


    success: function (result3) {
    let dropdownHarmony = $('#HarmonyCode');
    var result3 = JSON.parse(result3);
    dropdownHarmony.empty();
    $.each(result3, function (key, entry) {
        dropdownHarmony.append($('<option></option>').attr('value', entry.id).text(entry.ingilizce_tanim + ( "-" + entry.turkce_tanim)));
    })

            },
        });

</script>

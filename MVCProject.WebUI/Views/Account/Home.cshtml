
@{
    ViewBag.Title = "Hesabım";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div id="services">
    <div class="title">
        <h2>My Account</h2>
        <span class="underline">&nbsp;</span>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-8">
            <div class="welcome">
                @*<div class="bounce" style="margin: auto;text-align: center; display: block;">
                    </div>*@
                <p>Merhaba; <strong class="text-blue">@User.Identity.Name</strong></p>
                <p>Welcome to ZuuCargo. </p>

            </div>
        </div>
        <div class="col-4">
            <div id="accountBox" class="box lg-padding">
                <ul class="list-group">
                    <li class="list-group-item active">My Account</li>
                    <li class="list-group-item"><a href="@Url.Action("Edit","Account")">My Information</a></li>
                    <li class="list-group-item"><a href="@Url.Action("Manage","Account")">Change Password</a></li>

                    <li class="list-group-item"><a href="@Url.Action("LogOff","Account")">Logout</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>

<br />
<br />
<br />
<br />

<style type="text/css">
    .welcome {
        display: block;
        padding: 40px;
        background: #ecf5f8;
        margin-bottom: 20px;
        border-radius: 5px;
    }

    .col-md-4 #accountBox {
        border: 1px solid #b7b7ba;
        border-radius: 3px;
        margin: 30px 0 0;
    }

    #accountBox .lg-padding {
        padding: 20px !important;
    }
</style>

@{
    ViewBag.Title = "Calculate Shipping";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /*shipping calculator*/
    #shipping-form {
        max-width: 520px;
        margin: 0 auto 40px;
    }

        #shipping-form .validation-message {
            margin-top: -12px;
            margin-bottom: 15px;
        }

    .calculator-unit {
        color: #fff;
        text-align: center;
        font-size: 15px;
        line-height: 14px;
        padding: 4px 6px;
        cursor: pointer;
        background: #848484;
        border: none;
        text-transform: uppercase;
        display: flex;
        align-items: center;
        justify-content: center;
    }

        .calculator-unit.selected {
            background: #2378c8;
            color: #fff;
        }

    .calculator-form-row {
        display: flex;
        margin-bottom: 12px;
    }

        .calculator-form-row > * {
            flex: 1 1 auto;
            margin-right: 2px;
        }

    @@media (min-width: 400px) {
        .calculator-unit {
            padding: 4px 12px;
            min-width: 50px;
        }

        .calculator-form-row > * {
            margin-right: 8px;
        }
    }

    .calculator-form-row input,
    .calculator-form-row select {
        display: inline;
    }

    .calculator-register-now {
        font-weight: bold;
        font-size: 16px;
    }

        .calculator-register-now a {
            color: #ea8917;
        }

    .btn_rw {
        margin-top: 20px;
    }

    .calculate_btn,
    .clear_btn {
        color: #fff;
        padding: 13px 49px 13px 49px;
        font-size: 16px;
        text-transform: uppercase;
        font-weight: 600;
        border: none;
        margin: 2px;
    }

    .calculate_btn {
        background: #2378c8;
    }

    .clear_btn {
        background: #848484;
    }

    .ca_list ul {
        list-style: none;
        margin-top: -10px;
    }

    .ca_list li {
        font-size: 15px;
        margin-top: -11px;
        list-style: none;
        margin-left: -30px;
    }

        .ca_list li:before {
            content: "•";
            color: #154988;
            font-size: 24px;
            font-weight: 700;
            padding: 10px 10px 0px 0px;
        }

    .ship_lowtext {
        color: #464545;
        text-align: center;
    }

    .quote_title {
        font-size: 32px;
    }

    .quote_text {
        font-size: 26px;
        color: #f4921e;
        margin-top: 20px;
        font-weight: 600;
    }

    .dimen_text {
        text-align: left;
        margin-top: 20px;
        margin-bottom: 10px;
    }

    .hr_devider {
        border-top: 1px solid #3f4041;
        width: 100%;
        margin-top: 25px;
        margin-bottom: 20px;
    }

    .calculate_section {
        padding: 40px 0px 20px 0px;
        background: #3f4041;
    }

    .calculate_button {
        font-size: 18px;
        color: #fff;
        border: 2px solid #d08225;
        padding: 9px 30px 9px 30px;
        margin-top: 50px;
    }

    .shipping-methods {
        max-width: 520px;
        margin: 50px auto;
        scroll-margin-top: 120px;
    }

        .shipping-methods table {
            background-color: #fff;
            border-collapse: separate;
            border-spacing: 2px;
        }

        .shipping-methods caption {
            background-color: #164988;
            color: #fff;
            margin: 0 2px 3px;
            caption-side: top;
            text-transform: uppercase;
            padding: 10px;
            font-weight: 600;
            text-align: center;
        }

        .shipping-methods td {
            border: none;
            padding: 10px 15px;
        }

        .shipping-methods tr:nth-child(odd) td {
            background-color: #dddddd;
        }

        .shipping-methods tr:nth-child(even) td {
            background-color: #f5f5f5;
        }

        .shipping-methods td.service-level-name,
        .shipping-methods td.service-level-cost {
            font-weight: bold;
        }

    .calculator-show-unavailable {
        flex: 1 1 auto;
        display: flex;
        align-items: center;
        justify-content: flex-end;
        text-align: right;
        font-weight: 600;
    }

    .unavailable_rates {
        margin-top: 30px;
    }

    .calculator-potential-savings {
        text-align: center;
        font-size: 16px;
    }

    .pageSection.calculator-potential-savings h1 {
        font-weight: normal;
        font-size: 26px;
        line-height: 1.25;
    }

    .calculator-potential-savings h1 strong {
        display: block;
        font-size: 36px;
    }

    .calculator-example-boxes,
    .calculator-example-consolidated {
        max-width: 800px;
        display: flex;
    }

    .calculator-example-boxes {
        font-size: 16px;
        margin: 0 auto 50px;
    }

        .calculator-example-boxes img {
            display: block;
            margin-bottom: 15px;
        }

        .calculator-example-boxes > * {
            position: relative;
            padding: 10px;
        }

            .calculator-example-boxes > *::after {
                content: "";
                width: 1px;
                height: 46px;
                border-right: 2px solid #7fc0fa;
                position: absolute;
                right: 0;
                bottom: 0;
            }

        .calculator-example-boxes > :last-child::after {
            content: none;
        }

    .calculator-example-consolidated {
        line-height: 1;
        margin: 50px auto 30px;
    }

    .calculator-or {
        font-size: 55px;
        font-weight: bold;
        text-align: right;
        width: 30%;
        position: relative;
        right: -20px;
    }

    .calculator-consolidated-image {
        width: 50%
    }

    .calculator-to-ship-together {
        font-size: 18px;
        text-align: left;
        padding-top: 8px;
        width: 30%;
        position: relative;
        left: -20px;
    }

        .calculator-to-ship-together strong {
            font-size: 28px;
            display: block;
            margin-bottom: 6px;
        }

    @@media (min-width: 768px) {
        .calculator-example-boxes {
            font-size: 18px;
        }

        .calculator-or {
            font-size: 90px;
            right: -60px;
        }

        .calculator-to-ship-together {
            font-size: 27px;
            text-align: left;
            padding-top: 15px;
            left: -60px;
        }

            .calculator-to-ship-together strong {
                font-size: 48px;
                margin-bottom: 12px;
            }
    }

    .calculator-why-use-stackry p {
        max-width: 800px;
        margin: 0 auto 10px;
    }

        .calculator-why-use-stackry p a {
            color: #ed9d3e;
        }

    .calculator-why-use-stackry ul {
        padding: 0;
        max-width: 500px;
        margin: 0 auto;
    }

    .calculator-why-use-stackry li {
        list-style-type: none;
        margin-bottom: 8px;
        display: flex;
        align-items: center;
    }

        .calculator-why-use-stackry li img {
            margin-right: 8px;
            width: 78px;
        }

    .calculator-why-use-stackry h2 {
        text-align: center;
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 18px;
    }

    /*pricing page*/
    .price_text {
        text-align: left;
    }

    .table_heading {
        color: #fff;
        text-align: center;
        padding-bottom: 10px;
        padding-top: 10px;
    }

    .pricing_heading {
        color: #464545;
    }

    .pricing_text {
        color: #464545;
    }
</style>
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<h2>Calculate Shipping</h2>
<br />
<div class="row">
    <div class="col-xs-12 col-lg-6">
        <form id="shipping-form" name="shipping-form" action="#" method="post" novalidate="novalidate" class="address-form">
            <div class="calculator-form-row">

                <select name="country" id="country" class="form-control" data-show-subtext="true" data-live-search="true">
                    @foreach (MVCProject.Common.ViewModels.ZoneVM zone in (List<MVCProject.Common.ViewModels.ZoneVM>)ViewData["ZoneList"])
                    {
                        <option class="zone" data-zone="@zone.ZoneNo">@zone.Country</option>
                    }


                </select>
            </div>
            <div id="country-validation-message" class="validation-message" style="display:none">This field is required</div>

            <div class="calculator-form-row" id="pickup-location-section" style="display: none;">
                <label for="pickup-location-id">
                    Pickup location:
                </label>
                <div>
                    <input type="hidden" id="pickup-location-id" value="">
                    <div class="existing-pickup-location" style="display: none">
                        <div class="pickup-location-display"></div>
                        <a href="#" class="select-pickup-location">
                            <i class="fa fa-pencil fa-lg" aria-label="Change"></i>
                        </a>
                    </div>
                    <div class="no-pickup-location">
                        <a href="#" class="select-pickup-location">Select a pickup location</a>
                    </div>
                    <div id="pickup-location-message" style="display: none">
                        You must select a pickup location
                    </div>
                </div>
            </div>
            <div class="package_holder">

                <div class="holder">

                    <div class="calculator-form-row weight" style="margin-top: 25px">
                        <input name="weight"  id="txtWeight" type="text" class="form-control shipping_we numeric required" placeholder="Package Weight" value="">

                        <button class="calculator-unit ">kg</button>

                    </div>
                    <div class="validation-message" style="display: none">This field is required</div>
                  
                </div>

            </div>
            <div class="form_row">
                <label>Post Type:</label>

                <div class="form-check">
                    <input class="form-check-input" type="radio" name="rdType" id="rdDox">
                    <label class="form-check-label" for="rdDox">
                        Dox
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="rdType" id="rdClothes">
                    <label class="form-check-label" for="rdClothes">
                        Clothes
                    </label>
                </div>

            </div>
            <div class="row btn_rw">
                <div class="col-lg-12" align="center">
                    <span id="multi_button" style="display: none">
                        <input id="add-new-package" type="button" class="calculate_btn" value="Add Package">
                    </span>
                    <input type="button" name="calculate" id="btnsubmit" href="#" class="calculate_btn" value="Get Rates">
                    <input type="button" name="clear" id="clear" href="#" class="clear_btn" value="Reset">
                </div>
            </div>
        </form>
    </div>
    <div class="col-md-6">
        <table id="tblPrice" class="table table-bordered">
            <thead class="bg-primary text-white">
                <tr>
                    <th>Service Type</th>
                    <th>Package Type </th>
                    <th>Price ($) </th>
                </tr>
            </thead>
            <tbody></tbody>
        </table>
    </div>
    <div class="col-xs-12 col-lg-5">
        <p><strong>The international shipping calculator provides you with our current pricing on shipping from the Iraq to international destinations.</strong></p>
        <ul>
            <li>Enter your country</li>
            <li>Enter the weight of your package</li>
            <li>Enter the box dimensions (needed to calculate dimensional weight)</li>
        </ul>
        <p><strong>Is your country not listed?</strong> Please contact us and we will provide you with a quote.</p>
        <p>Changes in weight, dimensions, item value, and product classification will impact the final <span id="multi_hidden">quote</span>.</p>
        <p class="calculator-register-now">
            <a href="https://www.zuucargo.com/account/register" class="show-register">Register for an account now</a> to start saving on shipping.
        </p>
    </div>

</div>
<script>
   
    $body = $("#content-body");

    $(document).on({
        ajaxStart: function () { $body.addClass("loading"); },
        ajaxStop: function () { $body.removeClass("loading"); }
    });
</script>
<script>
    $(document).ready(function () {
        function validateForm() {
            if ($('[name="rdType"]').is(':checked') == false || $("#txtWeight").val().length <= 0)  {
                // do something
                alert("Please enter weight and select type!")
            } else {

  var priceTable = $('#tblPrice tbody');
            priceTable.empty();
            var isValid = $("#Weight").val() !== "";
            if (isValid) {
                $("#WeightDiv").removeClass("has-error");
                $(".help-block.with-errors").addClass("hidden");


                var form = $("#shipping-form").serializeArray();
                  $.ajax({
            type: "POST",
            url: "@Url.Action("CalculatePriceJson", "Home")",
            data: JSON.stringify(form),
            dataType: "json",
            contentType: "application/json",

            success: function (data) {
                 {
                    var priceTable = $('#tblPrice tbody');
                    priceTable.empty();
                    if (data.length != 0) {
                        $(data).each(function (index, prc) {
                            (prc.IsExpress == (true) ? prc.IsExpress = "Express" : prc.IsExpress = "Normal")
                            priceTable.append('<tr><td>' + prc.IsExpress + '</td><td>'
                                + prc.Type + '</td><td>' + prc.ServicePrice + '</td></tr>');
                        });
                    } else {
                       
          
                            priceTable.append('<tr><td>No Price for this options.</td></tr>');
                      
                    }
           

                }



            },
        error: function (hata, ajaxOptions, thrownError) {
                alert("No Prices For This Options!");
               
            }
    });

            } else {
                $("#WeightDiv").addClass("has-error");
                $(".help-block.with-errors").removeClass("hidden");

            }
            }




        }
        $("#btnsubmit").click(function () {
            validateForm();
        });
    });


</script>

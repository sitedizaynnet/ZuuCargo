@using MVCProject.Common.ViewModels
@model List<SelectBidVM>
@{
    ViewBag.Title = "Teklif Seçiniz";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div id="services">
    <div class="title">
        <h2>Teklif Seçimi</h2>
        <span class="underline">&nbsp;</span>
    </div>
</div>

<div class="col-md-12 bootstrap snippets">
    <div class="x_panel">
        <div class="x_content">
            <div class="row">
                <div class="clearfix"></div>
                @foreach (SelectBidVM item in Model)
                {
                    <div class="col-md-6 col-sm-6 col-xs-12 animated fadeInDown">

                        <div class="well profile_view">
                            <div class="col-sm-12">
                                <h4 class="brief"><i><a href="@Url.Action("ProviderDetailId", "Provider", new { @Id = item.ProviderId })"> @item.ProviderName</a></i></h4>
                                <div class="left col-xs-7">
                                    <h2>@item.AuthorizedPersonnelName</h2>
                                    <i class="fa fa-phone"></i> @item.Phone
                                    <ul class="list-unstyled">
                                        <li>
                                            <label style="word-wrap: break-word;">

                                                @item.BidComment
                                            </label>
                                        </li>
                                    </ul>
                                </div>
                                <div class="right col-xs-5 text-center" style="margin-bottom:20px">
                                    @if (item.ImagePath != null)
                                    {
                                        <img src="@item.ImagePath" style="height:150px" alt="Firma Logosu" class="img-responsive img-circle" />
                                    }
                                    else
                                    {
                                        <img src="~/Theme/img/no_picture.jpg" style="height:150px" alt="Firma Logosu" class="img-responsive img-circle" />

                                    }
                                </div>
                            </div>
                            <div class="col-xs-12 bottom text-center">
                                <div class="col-xs-12 col-sm-6 emphasis">
                                    <p class="ratings">
                                     <input id="input-3" name="input-3" value="@item.AvarageScore" class="rating">

                                    </p>
                                </div>
                                <div class="col-xs-12 col-sm-6 emphasis">
                                    <button type="button" class="btn btn-success btn-xs">
                                        <i class="fa fa-user"></i>
                                        <i class="fa fa-comments-o"></i> Mesaj Gönder
                                    </button>
                                    <button type="button" id="@item.BidId" class="btn btn-primary btn-sm" onclick="teklif_sec(this.id,@item.OrderId)">
                                        <i class="fa fa-check-square"></i>  Teklifi Seç
                                    </button>
                                </div>
                            </div>
                        </div>

                        <div class="ribbon red"><span>@item.Price TL</span></div>

                    </div>
                }

            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $(".rating").rating({
            size: 'xs',
            emptyStar: '<i class="glyphicon glyphicon-star"></i>',
            showCaption: false,
            showClear: false,
            displayOnly: true
        });
        
    });
    function teklif_sec(BidId, OrderId) {
        window.location.replace("../../Bid/BidChosed?BidId=" + BidId + "&OrderId=" + OrderId );

    };


</script>

<style>


    .profile_view {
        margin-bottom: 20px;
        display: inline-block;
        width: 100%;

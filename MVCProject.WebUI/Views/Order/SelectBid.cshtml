    }



        .ribbon:before, .ribbon:after {
            content: '';
            position: absolute;
            left: -9px;
            border-left: 10px solid transparent;
        }

        .ribbon:before {
            top: 0;
        }

        .ribbon:after {
            bottom: 0;
        }


        .ribbon span {
            display: block;
            font-size: 20px;
            font-weight: 600;
        }

        .ribbon.red {
            background: #e91b23;
            color: #fff;
            border-right: 5px solid #f2787d;
        }

            .ribbon.red:before {
                border-top: 27px solid #e91b23;
            }

            .ribbon.red:after {
                border-bottom: 27px solid #e91b23;
            }
</style>


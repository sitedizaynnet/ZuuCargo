
@{
    ViewBag.Title = "Mesajlar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model MVCProject.Common.ViewModels.MessageReplyVM
<script src="https://cdnjs.cloudflare.com/ajax/libs/bootbox.js/4.4.0/bootbox.min.js"></script>
<script>

    function messageDelete(index) {
        bootbox.dialog({
            message: "Mesajı Silmek İstiyor musunuz ?",
            title: "Mesaj Silme Onayı",
            buttons: {
                success: {
                    label: "Devam",
                    className: "btn-success",
                    callback: function deletemember() {
                        $('#messageId').val(index);
                        $('form#form-message-delete').submit();
                    },
                    danger: {
                        label: "İptal",
                        className: "btn-danger",
                        callback: function () {
                            bootbox.hideAll();
                        }
                    }
                }
            }
        });

    };
</script>


<body>
    <br />
    <div class="container">

        <div class="messaging">
            <div class="inbox_people">
                <div class="headind_srch">
                    <div class="recent_heading">
                        <h4>@Html.ActionLink("MESAJLAR","Messages")</h4>
                    </div>

                </div>
                @using (Html.BeginForm("DeleteMessage", "Message", FormMethod.Post, new { @id = "form-message-delete", @class = "form-horizontal container" }))
        {
            <div class="inbox_chat">
                @foreach (var m in Model.Messages)
        {


            <div class="chat_list">
                <div class="chat_people">
                    <div class="chat_img"> <i class="fa fa-comments fa-3x hidden-xs"></i></div>


                    <div class="chat_ib">
                        <a href="/Message/Message/@m.Id">
                            <h5>
                                @if (m.IsReaded)
                        {
                            @m.Subject
                }
                else
                {
                    @m.Subject <text>(Yeni)</text>
        }
                                <span class="chat_date">@m.DatePosted.ToString("dd/MM/yyyy")</span>
                            </h5>
                        </a>
                        <small>@m.Sender</small> @if (m.OwnerName != "")
                {

                    <small> > <a href="../../Provider/ProviderDetailId/@m.ToId"> @m.OwnerName </a></small>
        }
                        <br />
                        <a href="#" class="btn btn-xs btn-danger" onclick="messageDelete(@m.Id)"><span class="glyphicon glyphicon-remove"></span> Sil</a>
                        @if (m.OrderId > 0 && m.OrderId.ToString() != null)
                {
                    <a href="../../Account/OrderDetails/@m.OrderId" class="btn btn-xs btn-primary"><span class="glyphicon glyphicon-hand-right"></span> İlana Git</a>
        }
                        <input type="hidden" id="messageId" name="messageId" value="@m.Id">
                    </div>

                </div>
            </div>
}
            </div>
}
            </div>
        </div>
    </div>
</body>

